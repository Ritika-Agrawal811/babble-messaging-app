{
  "name": "messenger-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "format": "npx prettier . --write",
    "check-types": "tsc --pretty --noEmit",
    "commit": "git-cz"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.14",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@prisma/client": "^5.7.1",
    "@tailwindcss/forms": "^0.5.7",
    "bcrypt": "^5.1.1",
    "clsx": "^2.1.0",
    "husky": "^9.0.11",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.2",
    "react-icons": "^4.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "config": {
    "commitizen": {
        "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
      "hooks": {
          "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
  }
}
